<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff800080">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginStart="16.0sp"
            android:layout_marginTop="10.0sp"
            android:layout_marginEnd="16.0sp">

            <ImageView
                android:id="@id/imageView3"
                android:layout_width="25.0sp"
                android:layout_height="25.0sp"
                android:src="@drawable/arrow_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textViewTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="00"
                    android:textColor="@color/laranja_intenso"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5sp"
                    app:srcCompat="@drawable/star" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categorias"
                android:textColor="@color/laranja_intenso"
                android:textSize="20.0sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/camposouangola"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginStart="30.0sp"
                android:layout_marginTop="30.0sp"
                android:layout_marginEnd="30.0sp"
                android:background="@drawable/fundo_categoria"
                android:orientation="horizontal"
                android:padding="5.0sp"
                android:weightSum="10.0">

                <ImageView
                    android:id="@+id/lock1"
                    android:layout_width="60.0sp"
                    android:layout_height="60.0sp"
                    android:layout_weight="1.0"
                    android:padding="5.0sp"
                    android:src="@drawable/lock_open" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.0sp"
                    android:layout_weight="8.0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/idpergunta"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Sou angolano"
                        android:textColor="@color/laranja_intenso"
                        android:textSize="20.0sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/estrela0"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawablePadding="10.0sp"
                            android:gravity="center_vertical"
                            android:text="0 estrelas"
                            android:textColor="@color/laranja_intenso" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_marginStart="5sp"
                            android:padding="2sp"
                            app:srcCompat="@drawable/star" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/campoculturageral"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30.0sp"
                android:layout_marginTop="10.0sp"
                android:layout_marginEnd="30.0sp"
                android:background="@drawable/fundo_categoria"
                android:orientation="horizontal"
                android:padding="5.0sp"
                android:weightSum="10.0">

                <ImageView
                    android:id="@+id/lock2"
                    android:layout_width="60.0sp"
                    android:layout_height="60.0sp"
                    android:layout_weight="1.0"
                    android:padding="5.0sp"
                    android:src="@drawable/lock" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.0sp"
                    android:layout_weight="8.0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/culturaGeral"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Cultura geral"
                        android:textColor="@color/laranja_intenso"
                        android:textSize="20.0sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/estrela5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="5 estrelas"
                            android:textColor="@color/laranja_intenso" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_marginStart="5sp"
                            android:padding="2sp"
                            app:srcCompat="@drawable/star" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/campotermineafrase"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30.0sp"
                android:layout_marginTop="10.0sp"
                android:layout_marginEnd="30.0sp"
                android:layout_weight="1.0"
                android:background="@drawable/fundo_categoria"
                android:orientation="horizontal"
                android:padding="5.0sp"
                android:weightSum="10.0">

                <ImageView
                    android:id="@+id/lock3"
                    android:layout_width="60.0sp"
                    android:layout_height="60.0sp"
                    android:layout_weight="1.0"
                    android:padding="5.0sp"
                    android:src="@drawable/lock" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.0sp"
                    android:layout_weight="8.0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/termineAfrase"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Termine a frase"
                        android:textColor="@color/laranja_intenso"
                        android:textSize="20.0sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/estrela10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="10 estrelas"
                            android:textColor="@color/laranja_intenso" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_marginStart="5sp"
                            android:padding="2sp"
                            app:srcCompat="@drawable/star" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
